<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorPrimary"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="step size 0.5" />


            <com.example.xlhratingbar_lib.XLHRatingBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:numStars="5"
                app:rating="2.5"
                app:ratingViewClass="com.example.xlhratingbar.SimpleRatingView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="step size 1" />

            <com.example.xlhratingbar_lib.XLHRatingBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:numStars="5"
                app:rating="2.5"
                app:ratingViewClass="com.example.xlhratingbar.SimpleRatingView2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="enable false" />

            <com.example.xlhratingbar_lib.XLHRatingBar
                android:id="@+id/ratingBar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:numStars="4"
                app:rating="2.5"
                app:ratingViewClass="com.example.xlhratingbar.SimpleRatingView3" />
        </LinearLayout>

        <com.example.xlhratingbar_lib.XLHRatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:numStars="5"
            app:rating="5"
            app:ratingViewClass="com.example.xlhratingbar.SimpleRatingView4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.example.xlhratingbar_lib.XLHRatingBar
                android:id="@+id/ratingBar5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/btn_get_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get rating" />
        </LinearLayout>

        <com.example.xlhratingbar_lib.XLHRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:numStars="5"
            app:rating="2.5"
            app:ratingViewClass="com.example.xlhratingbar.SimpleRatingView6" />

    </LinearLayout>
</ScrollView>